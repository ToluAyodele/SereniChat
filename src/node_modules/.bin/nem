#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir/ruby" ]; then
  exec "$basedir/ruby"  "$basedir/../nem/bin/nem" "$@"
else 
  exec ruby  "$basedir/../nem/bin/nem" "$@"
fi
